<Page
    x:Class="Locsapp_Win_Phone.Likes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Locsapp_Win_Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

        <Page.TopAppBar>
            <AppBar Background="#C51A1C" IsOpen="True" IsSticky="True">
                <Grid>
                    <AppBarButton x:ConnectionId='1' Name="Show" Icon="AllApps" />
                </Grid>
            </AppBar>
        </Page.TopAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <SplitView x:ConnectionId='2' x:Name="SplitView" OpenPaneLength="240" CompactPaneLength="0" 
        DisplayMode="CompactOverlay" IsPaneOpen="False" >
            <SplitView.Pane>
                <Grid Background="#C51A1C">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <Button x:ConnectionId='6' x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                    Width="50" Height="50" Background="Transparent"/>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Orientation="Horizontal">
                        <Button x:ConnectionId='5' x:Name="MenuButton1" FontFamily="Segoe MDL2 Assets" Content="&#xE10F;"
                    Width="50" Height="50" Background="Transparent" />
                        <TextBlock Text="Logout" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Button x:ConnectionId='4' x:Name="MenuButton2" FontFamily="Segoe MDL2 Assets" Content="&#xE7C3;"
                    Width="50" Height="50" Background="Transparent"/>
                        <TextBlock Text="Article" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="2">
                        <Button x:ConnectionId='3' x:Name="MenuButton3" FontFamily="Segoe MDL2 Assets" Content="&#xE8FD;"
                    Width="50" Height="50" Background="Transparent" />
                        <TextBlock Text="Search" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

            </SplitView.Pane>
            <ScrollViewer>
                <StackPanel x:ConnectionId='7' x:Name="Sign_up_Scroll">
                    <Pivot>
                        <PivotItem Header="Article">
                            
                        </PivotItem>
                        <PivotItem Header="Reasearch">
                            
                        </PivotItem>
                    </Pivot>
                </StackPanel>
            </ScrollViewer>
        </SplitView>
    </Grid>
</Page>

